@import './base/reset'
@import './base/common'
@import './base/variables'
@import './base/mixins'
// 通配
#wrap-slider, .slider-box
  width 100vw
  height 100vh
  .wrap-pagination
    right 3vw
    z-index 20
    span
      width 20px
      height @width
      background white
      border-radius (@width / 2)
      margin 15px 0
      box-shadow 2px 2px 5px rgba(0, 0, 0, 0.3)
      opacity 1
      transition height 0.3s
      &.swiper-pagination-bullet-active
        height @height * 3
      &:last-child
        display none
.slider-box
  padding $header 0 0
  position relative
  overflow hidden
#party, #about, #contact
  display flex
  flex-wrap wrap
  justify-content center
  align-content center
// 轮播
#banner-slider
  width 100%
  height 100%
  z-index 10
  video, img
    width 100%
    height 100%
    display block
  .banner-pagination
    bottom 5vh
    z-index 11
    opacity 0.5
    transition opacity 0.4s
    &:hover
      opacity 1
    span
      width 20px
      height 10px
      background white
      border-radius (@width / 2)
      margin 0 5px
      box-shadow 2px 2px 5px rgba(0, 0, 0, 0.3)
      opacity 1
      transition width 0.3s
      &.swiper-pagination-bullet-active
        width @height * 3
        background $bg-pink
#banner-video
  width 100vw
  height 100%
  video
    background $bg-linear
    position relative
    z-index 1
// 图集展示
.change-views
  position absolute
  left 0
  top 45%
  li
    width auto
    height 50px
    padding-right 10px
    display block
    transform translateX(calc(-100% + 25px))
    transition transform 0.4s
    cursor pointer
    &+li
      margin-top 15px
    &.active, &:hover
      transform translateX(0)
    span
      height @height
      line-height @height
      color white
      text-shadow 1px 1px 2px rgba(0, 0, 0, 0.4)
      background $bg-pink
      padding 0 15px 0 5px
      border-top-right-radius (@height / 2)
      border-bottom-right-radius (@height / 2)
      display inline-block
      pointer-events none
#party-views
  width 100%
  max-width 1200px
  text-align center
  .swiper-slide
    padding 15px
    box-sizing border-box
    &.hide
      display none
  .views-prev, .views-next
    width 45px
    height @width
    background url('../images/arrow.png') center no-repeat
    background-size 70%
    border 1.5px solid #ecc5ca
    border-radius 50%
    margin 0 2.5vw
    display inline-block
    position static
  .views-next
    transform rotate(180deg)
  .view-box
    width 100%
    height 0
    padding-bottom 145%
    position relative
    overflow hidden
    cursor pointer
    img
      min-width 100%
      min-height 100%
      vertical-align middle
      position absolute
      left 50%
      top 50%
      transform translate(-50%, -50%)
      transition transform 0.3s
    div
      width 100%
      height 100%
      font-size 18px
      color white
      background rgba($bg-pink, 0.7)
      padding 25px
      position absolute
      left 0
      top 0
      opacity 0
      transition opacity 0.3s
    &:hover
      img
        transform translate(-50%, -50%) scale(1.1)
      div
        opacity 1
// 关于我们
#about
  align-content flex-end
  .container
    z-index 2
  .content
    width 100%
    height calc(100% - 25vh)
    padding-top 5vh
    justify-content space-between
  .detail
    max-width 900px
    text-align center
    background $bg-pink
    padding 20px 10vw 0 5vw
    border-radius 0 15vw 0 0 / 0 15vw 0 0
    display flex
    flex-wrap wrap
    justify-content center
    align-content space-around
    img
      max-width 12vw
      max-height 20vh
    article
      width 100%
      font-size 19px
      color white
      text-align left
      text-shadow 2px 0 3px rgba(0, 0, 0, 0.3)
      p
        margin-bottom 15px
  .pig
    display flex
    img
      width 35vh
      height auto
      margin auto
      display block
      animation yg-flutter 10s infinite
  .flag
    width 100%
    height 35vh
    background url('../images/bg/lay2_flag.png') center top no-repeat
    background-size 100% auto
    left 0
    top 120px
    position absolute
    z-index 1
// 联系我们
#contact
  align-content flex-end
  .balloon-left, .balloon-bottom
    position absolute
    bottom 0
    z-index 1
  .balloon-left
    width 50%
    height calc(100% - 110px)
    background url('../images/bg/lay3_bg.jpg') left bottom no-repeat
    background-size contain
    left 0
  .balloon-bottom
    width 20vw
    height 20vw
    background url('../images/bg/lay3_bg2.png') right bottom no-repeat
    background-size contain
    right -5vw
    animation yg-flutter 10s infinite
  .container
    width 80%
    max-width 1200px
    z-index 2
  .content
    padding 3vh 0
  .detail
    font-size 20px
    padding-top 3.5vh
    padding-left 3.5vw
    p
      margin-bottom 10px
    h4
      font-weight bold
      margin 5vh 0 15px
    ul
      width 100%
      max-width 250px
      display flex
      justify-content space-between
    li
      width 45%
      max-width 125px
      display inline-block
  .logo
    width 12vw
    margin 20px auto
    display block
// 百度地图
#baidu_map
  width 100%
  height 35vh
// 页尾
#footer
  height auto
  font-size 16px
  font-style italic
  color #444455
  background #ecc5ca
  padding 5px 0
// 其他
@keyframes yg-flutter
  0%
    transform translate(0, 0) rotate(0)
  30%
    transform translate(0, 20%) rotate(5deg)
  50%
    transform translate(0, 10%) rotate(-2deg)
  75%
    transform translate(0, 20%) rotate(-5deg)
  100%
    transform translate(0, 0) rotate(0)