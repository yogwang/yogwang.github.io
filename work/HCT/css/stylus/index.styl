body
  background-color #f6f6f6
.banner
  position relative
  .swiper-pagination
    width 100%
    bottom 0
    .swiper-pagination-bullet
      width 0
      height 3px
      background #000
      position absolute
      left 50%
      bottom 0
      transform translateX(-50%)
      &.active-bullet
        animation slider-bullet 5s linear
.index-channle
  padding 6vh 0
  ul
    display flex
    li
      text-align center
      flex 1
      a
        width 100%
        height 0
        padding-bottom 100%
        display block
        position relative
        transition background 0.4s, box-shadow 1s
        &:hover
          background white
          box-shadow 2px 2px 8px #ddd
        div
          width 100%
          height 100%
          display flex
          justify-content center
          align-content center
          flex-wrap wrap
          position absolute
          left 0
          top 0
          p
            width 100%
            font-size 2.5vh
            color #333
            margin-top 2vh
.index-footer
  background #282828
  .container
    display flex
    justify-content space-between
@keyframes slider-bullet
  to
    width 100%